#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

DESTDIR=$(CURDIR)/debian/glpi
GDIR=$(DESTDIR)/usr/share/glpi
GCONFDIR=$(DESTDIR)/etc/glpi
GCONFDIR2=$(DESTDIR)/etc/glpi/config
GVARDIR=$(DESTDIR)/var/lib/glpi
GLOGDIR=$(DESTDIR)/var/log/glpi
GTOOLSDIR=$(GDIR)/tools
GLPI_DB_VERSION=0.90.1

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	# Add here commands to install the package into debian/glpi.
	install -m 755 -d $(GDIR)
	install -m 755 -d $(GCONFDIR)
	install -m 755 -d $(GCONFDIR2)
	install -m 755 -d $(GVARDIR)
	install -m 755 -d $(GLOGDIR)
	install -m 755 -d $(GTOOLSDIR)
	install -m 644 *.php $(GDIR)
	install -m 644 *.js $(GDIR)
	for dir in * ; do \
		 if [ -d "$$dir" ]; then \
			  case "$$dir" in \
			 CVS|debian) \
			echo "skipping dir $$dir" \
			;; \
			 files) \
			cp -ar $$dir $(GVARDIR)/$$dir ; \
			find $(GVARDIR)/$$dir -type d -exec chmod 750 {} \; ;\
			;; \
			 *) \
			cp -ar $$dir $(GDIR)/$$dir ; \
			find $(GDIR)/$$dir -type f -exec chmod 644 {} \; ;\
		esac \
		 fi \
	done
	install -m 644 debian/config_path.php $(DESTDIR)/usr/share/glpi/config/
	install -m 644 debian/apache.conf $(GCONFDIR)
	install -m 644 debian/logrotate.conf $(GCONFDIR)
	install -m 644 debian/mysql.conf $(DESTDIR)/usr/share/glpi/install/
	install -m 644 debian/cliupdate.php $(GTOOLSDIR)
	chmod +x $(DESTDIR)/usr/share/glpi/scripts/*.sh
	# dbconfig stuff
	install -m 644 install/mysql/glpi-$(GLPI_DB_VERSION)-empty.sql $(DESTDIR)/usr/share/dbconfig-common/data/glpi/install/mysql
	# set default language to english
	sed -i -e 's/fr_FR/en_GB/' \
		$(DESTDIR)/usr/share/dbconfig-common/data/glpi/install/mysql
	#remove log folder
	rm -rf $(GDIR)/files/_logs
	# small fix: remove copy of LGPL
	rm -f $(GDIR)/lib/extjs/license.txt
	# delete remove.txt files
	find $(DESTDIR) -name remove.txt -exec rm -f {} \;
	# remove copy of libraries
	rm -rf $(DESTDIR)/usr/share/glpi/lib/phpcas
	rm -rf $(DESTDIR)/usr/share/glpi/lib/phpmailer
	rm -rf $(DESTDIR)/usr/share/glpi/lib/simplepie
	rm -rf $(DESTDIR)/usr/share/glpi/lib/tcpdf
	rm -rf $(DESTDIR)/usr/share/glpi/lib/tiny_mce
	rm -rf $(DESTDIR)/usr/share/glpi/lib/jqueryplugins/jquery-ui-timepicker-addon
	# fix various lintian
	# existing package / font
	rm -f  $(DESTDIR)/usr/share/glpi/lib/jqueryplugins/jquery-ui-scrollable-tabs/js/jquery.mousewheel.js
	rm -f  $(DESTDIR)/usr/share/glpi/lib/jqueryplugins/jquery-gantt/js/jquery.cookie.js
	rm -f  $(DESTDIR)/usr/share/glpi/lib/FreeSans.ttf
	# lib/jqueryplugins/jquery-gantt/index.html
	sed -i -e 's!http://maxcdn.bootstrapcdn.com/bootstrap/latest/js/bootstrap.min.js!js/bootstrap.min.css!' \
		 $(DESTDIR)/usr/share/glpi/lib/jqueryplugins/jquery-gantt/index.html
	sed -i -e 's!http://maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css!css/bootstrap.min.css!' \
		 $(DESTDIR)/usr/share/glpi/lib/jqueryplugins/jquery-gantt/index.html
	sed -i -e 's!http://cdnjs.cloudflare.com/ajax/libs/prettify/r298/prettify.min.css!css/prettify.min.css!' \
		 $(DESTDIR)/usr/share/glpi/lib/jqueryplugins/jquery-gantt/index.html
	# lib/jqueryplugins/jquery-ui-scrollable-tabs/index.html
	sed -i -e 's!https://code.jquery.com/ui/1.11.4/themes/!jquery-ui-themes/!' \
		$(DESTDIR)/usr/share/glpi/lib/jqueryplugins/jquery-ui-scrollable-tabs/index.html
	sed -i -e 's!https://code.jquery.com/jquery-1.11.2.min.js!js/jquery.min.js!' \
		$(DESTDIR)/usr/share/glpi/lib/jqueryplugins/jquery-ui-scrollable-tabs/index.html
	sed -i -e 's!https://code.jquery.com/ui/1.11.3/jquery-ui.min.js!js/jquery-ui.min.js!' \
		$(DESTDIR)/usr/share/glpi/lib/jqueryplugins/jquery-ui-scrollable-tabs/index.html
	#
	# regenerate gettext files
	for po in $(DESTDIR)/usr/share/glpi/locales/*.po ; do \
		msgfmt $$po -o $$(dirname $$po)/$$(basename $$po .po).mo ; \
		chmod 644 $$(dirname $$po)/$$(basename $$po .po).mo ; \
	done

build-arch: build
build-indep: build

build:
	# nothing to do

# Build architecture-dependent files here.
binary-arch: install

# Build architecture-independent files here.
binary-indep: install
	dh_testdir
	dh_testroot
	dh_installchangelogs CHANGELOG.txt
	dh_installdocs -XCOPYING.txt -Xlicense.txt
	dh_installexamples
	dh_link
	dh_fixperms
	dh_compress
	dh_installcron
	dh_installdebconf -pglpi
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep
.PHONY: clean binary-indep install build-arch build-indep
